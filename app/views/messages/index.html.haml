%footer.footer
  .form
    = form_for [@group,@message] do |f|
      =f.text_field :content, class: "form__message", placeholder: "type a message"
      .form__mask
        = f.label :image, class: "form__mask__image" do
          =fa_icon "picture-o", class: "icon"
          =f.file_field :image, class:"hidden"
      = f.submit "Send", class: "form__submit"
    %form.new-message
      %input.new-message__textarea(placeholder="type a message" name="message" type="text")
        %input.none#imagefile(name="file" type="file") 
          %label.image-label.fontawesome(for="imagefile")
            %i.image-label__input.fa.fa-image
      %input.new-message__submit-btn(class="send" type="submit" value="Send")
